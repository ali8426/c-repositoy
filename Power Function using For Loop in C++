#include <iostream>

int powerNum(int x, int y){
    int z = x;
    for(int i = 0; i < y; i++){
         z= z*x;
    }
    return z;
}

using namespace std;

int main()
{
    int x,y;
    cout<<"Enter two integers, the first will be the base number and the second one will be the exponent"<<endl;
    cin>>x>>y;
    cout<<powerNum(x,y);

    return 0;
}
